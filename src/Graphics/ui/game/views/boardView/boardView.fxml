   </left>
   <right>
      <GridPane prefHeight="720.0" prefWidth="183.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="220.0" prefWidth="220.0" />
