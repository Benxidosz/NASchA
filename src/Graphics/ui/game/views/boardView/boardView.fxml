                  </Label>
                  <TextArea prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1" />
               </children>
            </GridPane>
            <Button alignment="CENTER" mnemonicParsing="false" prefHeight="75.0" prefWidth="75.0" styleClass="EndTurnButton, Button" text="End Turn" textAlignment="CENTER" wrapText="true" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
