      <Pane fx:id="canvasWrapper" prefHeight="720.0" prefWidth="665.0" BorderPane.alignment="CENTER">
         <children>
            <Canvas fx:id="myCanvas" height="293.0" onMouseClicked="#canvasClick" onMouseMoved="#canvasMouseMoved" width="342.0" />
         </children>
      </Pane>
