         <children>
            <Button mnemonicParsing="false" onAction="#move" prefHeight="50.0" prefWidth="150.0" styleClass="Button" text="Move" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
